msgid "plugins.paymethod.xendit.displayName"
msgstr "Xendit Payment"

msgid "plugins.paymethod.xendit.description"
msgstr "This plugin allows OJS to accept payments using the Xendit payment gateway."

msgid "plugins.paymethod.xendit.settings.testMode"
msgstr "Test Mode"

msgid "plugins.paymethod.xendit.settings.apiKey"
msgstr "API Key"

msgid "plugins.paymethod.xendit.settings.apiKey.description"
msgstr "Enter your Xendit secret API key. You can find this in your Xendit Dashboard under Settings > API Keys."

msgid "plugins.paymethod.xendit.settings.webhookSecret"
msgstr "Webhook Secret"

msgid "plugins.paymethod.xendit.settings.webhookSecret.description"
msgstr "Enter your webhook verification token. You can find this in your Xendit Dashboard under Settings > Webhooks. Please use the URL below to configure your Webhook:"

msgid "plugins.paymethod.xendit.settings.invoiceDuration"
msgstr "Invoice Duration (Days)"

msgid "plugins.paymethod.xendit.settings.invoiceDuration.description"
msgstr "The number of days before the generated invoice expires."

msgid "plugins.paymethod.xendit.settings.notificationChannels"
msgstr "Customer Notification Channels"

msgid "plugins.paymethod.xendit.settings.notificationChannels.description"
msgstr "Select the channels through which customers will receive invoice notifications (e.g., upon creation, payment). The customer must have a valid email or phone number for these to work."

msgid "plugins.paymethod.xendit.error"
msgstr "An error occurred during the transaction. Please try again or contact the journal manager."

msgid "emails.xenditInvestigatePayment.subject"
msgstr "Unusual Xendit Payment Activity"

msgid "emails.xenditInvestigatePayment.body"
msgstr "An unusual payment activity was detected from the Xendit payment gateway. It is recommended to log in to your Xendit merchant account to investigate this further.<br><br>This email was generated by the OJS Xendit Payment plugin."

msgid "emails.xenditInvestigatePayment.description"
msgstr "This email is sent to the main contact of the journal when an unusual activity is detected from the Xendit payment gateway that requires manual investigation."